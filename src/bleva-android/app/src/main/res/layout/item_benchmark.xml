<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <CheckBox
        android:id="@+id/benchmarkCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/benchmarkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/benchmarkCheck"
        android:layout_toRightOf="@+id/benchmarkCheck"
        android:paddingRight="6dp"
        android:text="Scanning Benchmark 60s"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/benchmarkDescription"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@+id/benchmarkCheck"
        android:layout_height="wrap_content"
        android:layout_below="@id/benchmarkName"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scans for 60s on the smartphone without a filter."
        />
</RelativeLayout>